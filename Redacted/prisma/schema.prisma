generator client {
  provider   = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id            String    @id @default(cuid()) @map("_id")
  clerkId       String?   @unique
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  links            Link[]
  createdAt        DateTime @default(now())
  subscribed       Boolean  @default(true)
  source           String?
  defaultWorkspace String?

  @@index(source)
  @@index(defaultWorkspace)
}

model Link {
  id         String    @id @default(cuid()) @map("_id")
  domain     String
  key        String
  url        String
  expiresAt  DateTime?
  expiredUrl String?
  password   String?
  externalId String?

  proxy       Boolean @default(false)
  title       String?
  description String?
  image       String?

  user   User?   @relation(fields: [userId], references: [id])
  userId String?

  publicStats Boolean   @default(false)
  clicks      Int       @default(0)
  lastClicked DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  tags LinkTag[]
}

model LinkTag {
  id        String   @id @default(cuid()) @map("_id")
  name      String
  color     String   @default("blue")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  projectId String
  Link      Link?    @relation(fields: [linkId], references: [id])
  linkId    String?

  @@unique([name, projectId])
  @@index(projectId)
}

// Gateway key = our key. Customer adds their provider + API key; we generate gateway key that wraps it.
model ApiKey {
  id              String   @id @default(cuid()) @map("_id")
  gatewayKey      String   // our key (sk-redacted-xxx) - used in X-API-Key header
  provider        String   // openrouter | openai | gemini | anthropic | grok
  model           String?  // optional: model id user wants to use (e.g. gpt-4o, claude-3-opus)
  customerApiKey  String   // customer's API key for that provider (store encrypted in prod)
  name            String?  // optional label
  clerkId         String   // owner (Clerk user id)
  createdAt       DateTime @default(now())

  @@unique(gatewayKey)
  @@index(clerkId)
}

// Request log: one row per gateway request (passed or blocked). Backend POSTs to /api/internal/log.
model RequestLog {
  id               String   @id @default(cuid()) @map("_id")
  gatewayKey       String   // which gateway key was used (we filter by user's keys in dashboard)
  status           String   // "passed" | "blocked"
  violationReason  String?  // if blocked, why (e.g. PII detected)
  provider         String?
  model            String?
  createdAt        DateTime @default(now())

  @@index(gatewayKey)
  @@index(createdAt)
}
